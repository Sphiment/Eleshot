{  "manifest_version": 3,
  "name": "Element Picker",
  "version": "1.0",
  "description": "Click the toolbar button to start element picking and display tag names.",
  "permissions": ["activeTab", "scripting", "tabs", "clipboardWrite", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Start Element Picker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
